<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <!-- Base theme applied regardless of API level -->
    <style name="AppTheme.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/accentColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryColor</item>
        <item name="colorSecondary">@color/accentColor</item>
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">@color/primaryColor</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">@color/primaryColor</item>
        <item name="colorSurface">@color/primaryColor</item>
        <item name="colorOnSurface">@color/accentColor</item>
        <item name="android:colorBackground">@color/primaryColor</item>
        <item name="colorOnBackground">@color/accentColor</item>
        <item name="android:statusBarColor">@color/primaryColor</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">false</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>
    </style>

    <!-- Default App theme applied if no resource style overrides for specific API level -->
    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="Widget.App.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/snackbar_action_color</item>
    </style>

    <!-- App Splash Screen Theme -->
    <style name="AppTheme.Splash.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Default Splash Screen theme applied if no resource style overrides for specific API level -->
    <style name="AppTheme.Splash" parent="AppTheme.Splash.Base">
    </style>

    <style name="ZeroStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="ActionButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@drawable/action_button_color_states</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/action_button_text_color_selector</item>
        <item name="android:paddingVertical">17dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>

    <style name="TextInputStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextColor">@color/placeholder_color</item>
        <item name="android:textColorHint">@color/placeholder_color</item>
    </style>
</resources>
