<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" 
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" 
                                                   android:layout_width="match_parent" 
                                                   android:layout_height="match_parent">
    <include
        style="@style/ZeroStyle"
        layout="@layout/layout_toolbar"
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.core.widget.NestedScrollView
        style="@style/ZeroStyle"
        android:fillViewport="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginHorizontal="@dimen/margin_medium">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                style="@style/ZeroStyle"
                android:id="@+id/title_layout"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/primary_text_size"
                    android:text="@string/title"/>
        
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/edit_text_background_color"
                    android:hint="@string/title_placeholder"
                    android:inputType="textCapSentences"
                    android:textSize="@dimen/edit_text_size"
                    android:layout_marginTop="4dp"
                    app:MvxBind="Text Title"
                    android:lines="1" />
        
            </LinearLayout>

            <LinearLayout
                style="@style/ZeroStyle"
                android:id="@+id/description_layout"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_layout"
                android:layout_marginTop="32dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/primary_text_size"
                    android:text="@string/description"/>

                <EditText
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/edit_text_background_color"
                    android:hint="@string/description_placeholder"
                    android:inputType="textCapSentences|textMultiLine"
                    android:textSize="@dimen/edit_text_size"
                    app:MvxBind="Text Description"
                    android:lines="7" />

            </LinearLayout>
            
            <View style="@style/ZeroStyle"
                  android:id="@+id/white_space"
                  app:layout_constraintBottom_toTopOf="@id/action_button"
                  app:layout_constraintTop_toBottomOf="@id/description_layout"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"/>

            <com.google.android.material.button.MaterialButton
                style="@style/ActionButtonStyle"
                android:text="@string/create"
                android:id="@+id/action_button"
                app:MvxBind="Click ActionCommand; Enabled IsValid"
                android:layout_marginVertical="54dp"
                android:textStyle="bold"
                android:textSize="@dimen/body_text_size"
                app:layout_constraintTop_toBottomOf="@id/white_space"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>